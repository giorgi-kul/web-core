@model WebCore.AdminUI.Models.LoginModel

<!DOCTYPE html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Generic - Control Panel</title>
    <link href="https://fonts.googleapis.com/css?family=Nunito:300,400,400i,600,700,800,900" rel="stylesheet">
    <link href="~/assets/css/main.css" rel="stylesheet">
</head>
<div class="auth-layout-wrap">
    <div class="auth-content">
        <div class="card o-hidden">
            <div class="row">
                <div class="col-md-12">
                    <div class="p-4">
                        <div class="auth-logo text-center mb-4"><img src="~/assets/images/logo.png" alt=""></div>
                        <p>@Model?.ErrorMessage</p>
                        <form asp-controller="login" method="post">
                            <input type="hidden" asp-for="ReturnUrl" value="@(Model?.ReturnUrl ?? Context.Request.Query["ReturnUrl"])" />
                            <div class="form-group">
                                <label for="email">Email address</label>
                                <input class="form-control form-control-rounded" id="email" type="email" asp-for="Email" value="kulijanishvilig@gmail.com">
                            </div>
                            <div class="form-group">
                                <label for="password">Password</label>
                                <input class="form-control form-control-rounded" id="password" type="password" asp-for="Password" autocomplete="off" value="Aa123456!">
                            </div>
                            <button class="btn btn-rounded btn-primary btn-block mt-2">Sign In</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>