@model WebCore.Domain.Models.Admin.AdminListModel
@{
    Layout = "~/Views/_Layout.cshtml";
}

<nav class="page-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Forms</a></li>
        <li class="breadcrumb-item active" aria-current="page">Basic Elements</li>
    </ol>
</nav>

<div class="row">
    <div class="col-md-12">
        <vc:alert-message></vc:alert-message>
    </div>

    @if (Model.CreateEnabled)
    {
        <div class="col-md-12">
            <a href="@Url.Action("create")" class="btn btn-primary mb-3">Create</a>
        </div>
    }

    <vc:generic-filter properties="@Model.Properties"></vc:generic-filter>

    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                @foreach (var item in Model.Properties)
                                {
                                    if (item.Settings.IsListVisible)
                                    {
                                        <th>@item.GetPropertyName()</th>
                                    }
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <vc:generic-render-properties properties="@Model.Properties" item="@item" page-mode="List"></vc:generic-render-properties>

                                    <td class="text-right" style="min-width: 60px;vertical-align: middle;">
                                        <div class="btn-group btn-group-toggle btn-group-sm" data-toggle="buttons">
                                            @if (Model.DetailsEnabled)
                                            {
                                                <vc:generic-button action="details" controller="@ViewContext.RouteData.Values["controller"].ToString()" id="@item.Id" button-class="btn btn-secondary btn-icon" icon-class="file-text" button-text=""></vc:generic-button>
                                            }

                                            @if (Model.EditEnabled)
                                            {
                                                <vc:generic-button action="edit" controller="@ViewContext.RouteData.Values["controller"].ToString()" id="@item.Id" button-class="btn btn-primary btn-icon" icon-class="edit" button-text=""></vc:generic-button>
                                            }

                                            @if (Model.DeleteEnabled)
                                            {
                                                <vc:generic-button action="delete" controller="@ViewContext.RouteData.Values["controller"].ToString()" id="@item.Id" button-class="btn btn-danger btn-icon js-generic-delete-item" icon-class="trash" button-text=""></vc:generic-button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <vc:pager shown-page-number="5" total-items="@Model.TotalCount" items-per-page="@Model.ItemsPerPage"></vc:pager>
    </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Confirm delete</h5>
            </div>
            <div class="modal-body">
                Are you sure you want to permanently delete this item?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                <button type="button" class="btn btn-primary js-generic-delete-confirmed" data-delete-url="@Url.Action("delete")">Yes</button>
            </div>
        </div>
    </div>
</div>